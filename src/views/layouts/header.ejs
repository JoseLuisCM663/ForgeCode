<body>
  <header>
    <nav>
      <span><a href="/">Forge Code Studio</a> </span>
      <div>
        <a href="/servicios">Servicios</a>
        <a href="/industria">Industrias</a>
        <a href="/nosotros">Nosotros</a>
        <a href="/desarrolladores">Desarrolladores</a>
        <a href="/buzon/contacto">Contactanos</a>
        <% if (typeof ID === 'number') { %>
            <a id="logout">Salir</a>
            <a href="/users/profile">
                <i class="bi bi-person-circle"></i> <%= mail %>
            </a>
                    <% } else { %>
            <a href="/users/register">Registrarse</a>
            <a href="/users/login">Iniciar sesi√≥n</a>
            <% } %>
      </div>
    </nav>
  </header>
  <script>
    const logout = document.getElementById('logout');
    if (logout) {
        logout.addEventListener('click', () => {
            fetch('/users/logout', {
                method: 'POST',
            }).then(() => {
                window.location.href = '/';
            });
        });
    }
  </script>